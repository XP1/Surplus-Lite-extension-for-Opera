{
  "name": "Surplus Lite",
  "version": "1.0",
  "description": "Lightweight Google+ Notifications in Chrome",
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png"
  },
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "img/old.png",
    "default_title": "Surplus Lite",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://plus.google.com/",
		"idle",
    "notifications"
  ]
}
